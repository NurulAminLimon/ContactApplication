<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/backgroud"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".SecondActivity">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Personal Information"
           android:textSize="20dp"
           android:typeface="serif"
           android:background="@android:color/holo_green_light"
           android:padding="5dp"
           android:textAlignment="center"
           />


       <LinearLayout
           android:layout_marginTop="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="5dp"
           android:gravity="center_horizontal">

           <TextView
               android:typeface="serif"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Roll  :"
               android:textColor="#030303"

               android:textSize="15dp" />

           <EditText
               android:id="@+id/Roll_ID"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:background="#F1E5E5"
               android:padding="5dp"
               android:hint="Enter Your Roll :"
               android:inputType="text" />

       </LinearLayout>

       <LinearLayout
           android:layout_marginBottom="10dp"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           >

           <TextView
               android:typeface="serif"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Name: "
               android:textColor="#030303"
               android:textSize="15dp" />

           <EditText
               android:id="@+id/NameID"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:hint="Enter Your Name :"
               android:background="#F1E5E5"
               android:padding="5dp"
               android:inputType="text" />

       </LinearLayout>

       <LinearLayout
           android:layout_marginBottom="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:typeface="serif"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="BirthDay:"
               android:textColor="#0F0E0E"
               android:textSize="15dp" />

           <EditText
               android:id="@+id/BirthID"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:background="#F1E5E5"
               android:padding="5dp"
               android:hint=" BirthDay :" />

           <ImageButton
               android:id="@+id/calanderId"
               android:layout_marginLeft="5dp"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/cadar"
               />

       </LinearLayout>

       <LinearLayout
           android:layout_marginBottom="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:typeface="serif"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Address: "
               android:textColor="#0F0E0E"
               android:textSize="15dp" />

           <EditText
               android:id="@+id/AddressID"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:background="#F1E5E5"
               android:padding="5dp"
               android:hint="Enter Your Address :"
               android:inputType="text" />

       </LinearLayout>
       <LinearLayout
           android:layout_marginBottom="10dp"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:typeface="serif"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Home District: "
               android:textColor="#030303"
               android:textSize="15dp" />

           <AutoCompleteTextView
               android:id="@+id/CountryID"
               android:layout_width="200dp"
               android:background="#F1E5E5"
               android:padding="5dp"
               android:hint="Select Your District :"
               android:layout_height="wrap_content" />

       </LinearLayout>

       <LinearLayout
           android:layout_marginBottom="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:typeface="serif"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Mobile Number :"
               android:textColor="#070606"
               android:textSize="15dp" />

           <EditText
               android:id="@+id/MObileNOID"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:hint="Enter Your Address :"
               android:background="#F1E5E5"
               android:padding="5dp"
               android:inputType="number" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="10dp">

           <TextView
               android:typeface="serif"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="10dp"
               android:text="Gendar   :"
               android:textColor="#030303"
               android:textSize="15dp" />

           <RadioGroup
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <RadioButton
                   android:id="@+id/Male"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:buttonTint="#9C27B0"
                   android:checked="false"
                   android:text="Male" />

               <RadioButton
                   android:id="@+id/FamaleID"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:buttonTint="#9C27B0"
                   android:checked="false"
                   android:text=" Famale" />

           </RadioGroup>

       </LinearLayout>

       <LinearLayout
           android:layout_marginBottom="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:typeface="serif"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Education Qualification :"
               android:textColor="#0A0A0A"
               android:textSize="15dp" />

           <CheckBox
               android:id="@+id/sscID"
               android:buttonTint="#0C0B0B"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="SSC"
               />
           <CheckBox
               android:id="@+id/hscID"
               android:buttonTint="#070707"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="HSC"
               />
           <CheckBox
               android:id="@+id/DiplomaID"
               android:buttonTint="#070606"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Diploma"
               />
           <CheckBox
               android:id="@+id/bscID"
               android:buttonTint="#0E0D0D"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="BCS"
               />



       </LinearLayout>
       <Button
           android:id="@+id/SaveID"


           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="save"
           android:background="@drawable/simple_button"
           />
       <Button
           android:layout_marginTop="10dp"
           android:id="@+id/ClearId"


           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="reset"
           android:background="@drawable/simple_button"
           />

       <TextView
           android:id="@+id/ShowID"
           android:layout_marginTop="10dp"
           android:textSize="20dp"
           android:textStyle="bold"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />


   </LinearLayout>



</ScrollView>